<?xml version="1.0" encoding="UTF-8"?>
<teamcity-agent-plugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                       xsi:noNamespaceSchemaLocation="urn:schemas-jetbrains-com:teamcity-agent-plugin-v1-xml">
    <info>
        <name>${mojo.pluginName}</name>
    </info>
    <plugin-deployment use-separate-classloader="${mojo.agentUseSeparateClassloader}"/>
    #if( $mojo.agentPluginDependencies || $mojo.agentToolDependencies)
        <dependencies>
            #foreach( $dependency in $mojo.agentPluginDependencies )
                <plugin name="${dependency}"/>
            #end
            #foreach( $dependency in $mojo.agentToolDependencies )
                <tool name="${dependency}"/>
            #end
        </dependencies>
    #end
</teamcity-agent-plugin>